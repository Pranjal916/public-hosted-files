extends ../base.pug

block content
  link(rel='stylesheet', href='https://Pranjal916.github.io/public-hosted-files/style-list.css', type='text/css')
  h3 Items for sale
  p
    a(href="/items/add", class='btn btn-success btn-sm')
      i.glyphicon.glyphicon-plus
      span  New item

  each book in books
    .media
      a(href=`/items/${book.id}`)
        .media-left
          img(src=book.imageUrl || "http://placekitten.com/g/128/192")
        .media-body
          h3 #{book.title}
          p <span class="price">$#{book.price}</span>
          p Condition: #{book.condition}

  if !books.length
    p No items found.

  if nextPageToken
    nav
      ul.pager
        li
          a(href=`?pageToken=${encodeURIComponent(nextPageToken)}`) More
